<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextDescription" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height_small</item>
        <item name="android:background">@drawable/shape_rec_white_null_rounded_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Response" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/warm_grey</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
